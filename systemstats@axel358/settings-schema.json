{
   "head": {
      "type": "header",
      "description": "Settings"
   },
   "display-style": {
      "type": "combobox",
      "default": "both",
      "description": "Display style",
      "options": {
         "Column": "column",
         "Both": "both",
         "CPU only": "cpu",
         "RAM only": "mem"
      }
   },
   "use-compact-label": {
      "type": "switch",
      "description": "Use compact label style",
      "default": false,
      "tooltip": "Show only the first character of each label. Example: C for CPU"
   },
   "refresh-interval": {
      "type": "spinbutton",
      "default": 1000,
      "min": 500,
      "max": 5000,
      "step": 250,
      "units": "milliseconds",
      "description": "Refresh interval",
      "tooltip": "Time between data refeshes"
   },
   "decimal-places": {
      "type": "spinbutton",
      "default": 1,
      "min": 0,
      "max": 3,
      "step": 1,
      "description": "Decimal places",
      "tooltip": "Number of decimal places to show"
   }
}